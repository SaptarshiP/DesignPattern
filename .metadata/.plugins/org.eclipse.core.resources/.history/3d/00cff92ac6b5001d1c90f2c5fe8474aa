package com.psja.AdapterDesign;

public class Person {

	private PhoneInterface phoneAdapter;
	
	public void setPhoneAdapter( PhoneAdapter phoneAdapter ) {
		this.phoneAdapter = phoneAdapter;
	}
	public PhoneAdapter getPhoneAdapter() {
		return this.phoneAdapter;
	}
	
	public void wantToCharge() {
		phoneAdapter.charge();
	}
}
